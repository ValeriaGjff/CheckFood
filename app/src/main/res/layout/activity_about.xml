<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAbout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="26dp"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:title="О приложении"
        app:titleCentered="true"
        app:titleTextColor="#3E5250" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_logo" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CheckFood — приложение, которое помогает вам узнавать состав продуктов и избегать вредных веществ"
                android:textColor="#5FA777"
                android:textAlignment="center"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Версия приложения: Версия 1.0.0"
                android:textColor="#3E5250"
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Политика конфиденциальности"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#5FA777"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Оценить приложение"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#5FA777" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>